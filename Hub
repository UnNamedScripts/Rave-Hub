local title = "Scriptware | Hub"

local OrionLib = loadstring(game:HttpGet(("https://raw.githubusercontent.com/shlexware/Orion/main/source")))()

local GameID = game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId)

OrionLib:MakeNotification(
    {
        Name = "Scriptware",
        Content = "Welcome " .. game.Players.LocalPlayer.Name .. ", the Hub is loading now!",
        Image = "rbxassetid://7072718307",
        Time = 4
    }
)

local Window = OrionLib:MakeWindow({Name = title})

local Tab =
    Window:MakeTab(
    {
        Name = "Games",
        Icon = "rbxassetid://7072718266"
    }
)

Tab:AddButton(
    {
        Name = "Gas Station Simulator",
        Callback = function()
            if GameID = 9359839118 then
                loadstring(game:HttpGet(("https://raw.githubusercontent.com/UnNamedScripts/Scriptware/main/Supported-Games/Gas-Station-Simulator")))()
            else
                OrionLib:MakeNotification(
                    {
                        Name = "Scriptware | Error",
                        Content = "Different game detected, please switch to Gas Station Simulator to use its UI",
                        Image = "rbxassetid://7072980286",
                        Time = 4
                    }
                )
        end
    }
)

OrionLib:Init()
